<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.FavoriteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_episode_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:text="@string/favorite_series"/>

        <TextView
            android:id="@+id/message_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:text="@string/message_favorite"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="22sp"
            android:paddingTop="100dp"
            android:visibility="gone"
            android:paddingHorizontal="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:paddingHorizontal="5dp"
            android:id="@+id/list_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:isScrollContainer="false"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</FrameLayout>